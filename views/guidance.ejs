                    <div class="risk-item">
                        <h3><i class="fas fa-smoking"></i>Smoking Addiction</h3>
                        <input type="number" class="quantity-input" placeholder="Qty" id="smokeQuantity" min="0"
                            value="0">
                        <select class="frequency-dropdown" id="smokeFrequency">
