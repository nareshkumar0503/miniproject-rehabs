<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Appointment</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Arial', sans-serif;
        }

        .appointment-card {
            margin-top: 50px;
            padding: 30px;
            background-color: #ffffff;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            border-radius: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .appointment-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

        .appointment-header {
            background-color: #17a2b8;
            color: white;
            padding: 25px;
            border-radius: 20px 20px 0 0;
            text-align: center;
            box-shadow: inset 0 -3px 15px rgba(0, 0, 0, 0.1);
        }

        .appointment-header h3 {
            margin: 0;
            font-size: 1.9rem;
            font-weight: bold;
        }

        .appointment-body {
            padding: 25px;
        }

        .appointment-info {
            margin-bottom: 15px;
        }

        .appointment-info label {
            font-weight: 600;
            color: #495057;
            display: block;
            margin-bottom: 5px;
        }

        .appointment-info p {
            color: #212529;
            font-size: 1.15rem;
            margin: 0;
        }

        .btn-view-more {
            background-color: #007bff;
            color: white;
            border-radius: 30px;
            padding: 12px 20px;
            transition: background-color 0.3s ease;
        }

        .btn-view-more:hover {
            background-color: #0056b3;
        }

        .btn-danger,
        .btn-primary {
            font-weight: bold;
            padding: 12px 25px;
            border-radius: 30px;
        }

        .btn-danger {
            background-color: #e74c3c;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c0392b;
        }

        .confirmation-box {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            background-color: #f9f9f9;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .confirmation-box p {
            font-size: 1.15rem;
            color: #333;
        }

        .btn-warning,
        .btn-secondary {
            margin: 10px 0;
            border-radius: 30px;
            padding: 10px 20px;
            font-size: 1rem;
        }

        .text-center {
            text-align: center;
            padding: 50px;
            margin-top: 50px;
        }

        .text-center h4 {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
        }

        .text-center p {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 25px;
        }

        a.btn-primary {
            font-size: 1rem;
            padding: 12px 30px;
            border-radius: 30px;
            text-transform: uppercase;
        }
    </style>
</head>

<body>
<%- include('notifications') %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <% if (appointments && appointments.length> 0) { %>
                    <% appointments.forEach(function(appointment) { %>
                        <div class="appointment-card">
                            <div class="appointment-header">
                                <h3>Your Appointment</h3>
                            </div>
                            <div class="appointment-body">
                                <div class="appointment-info">
                                    <label>Center Name:</label>
                                    <p>
                                        <%= appointment.centerName || 'Yet to be assigned' %>
                                    </p>
                                </div>
                                <div class="appointment-info">
                                    <label>Appointment Date:</label>
                                    <p id="appointmentDate">
                                        <%= appointment.appointmentDate %>
                                    </p>
                                </div>
                                <div class="appointment-info">
                                    <label>Time:</label>
                                    <p>
                                        <%= appointment.formattedTime || 'Yet to be assigned' %>
                                    </p>
                                </div>
                                <div class="appointment-info">
                                    <label>Center Email:</label>
                                    <p id="centerEmail">
                                        <%= appointment.centerEmail %>
                                    </p>
                                </div>
                                <div class="appointment-info">
                                    <label>Status:</label>
                                    <p
                                        class="<%= appointment.status === 'Confirmed' ? 'text-success' : 'text-warning' %>">
                                        <%= appointment.status %>
                                    </p>
                                </div>

                                <!-- Cancel Appointment Button -->
                                <button class="btn btn-danger btn-block" id="cancelAppointmentBtn">Cancel
                                    Appointment</button>

                                <!-- Confirmation Section (Initially hidden) -->
                                <div id="cancelConfirmation" class="confirmation-box" style="display: none;">
                                    <p>Are you sure you want to cancel your appointment?</p>
                                    <button class="btn btn-warning" id="confirmCancelBtn">Yes, Cancel</button>
                                    <button class="btn btn-secondary" id="dismissCancelBtn">No, Keep
                                        Appointment</button>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <div class="text-center">
                                    <h4>No appointments found for your account.</h4>
                                    <p>It seems like you haven't booked any appointments yet. Please click below to
                                        schedule one.</p>
                                    <a href="/" class="btn btn-primary">Explore Centers and Schedule Your
                                        Appointment</a>
                                </div>
                                <% } %>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
         // Get the cancel button and confirmation section   
    const cancelAppointmentBtn = document.getElementById('cancelAppointmentBtn');
    const cancelConfirmation = document.getElementById('cancelConfirmation');
    const confirmCancelBtn = document.getElementById('confirmCancelBtn');
    const dismissCancelBtn = document.getElementById('dismissCancelBtn');

    // Show the confirmation section when 'Cancel Appointment' is clicked
    cancelAppointmentBtn.addEventListener('click', () => {
        cancelConfirmation.style.display = 'block';
        cancelAppointmentBtn.style.display = 'none';
    });

    // Handle 'Yes, Cancel' button click
    confirmCancelBtn.addEventListener('click', () => {
        const centerEmail = document.getElementById('centerEmail').textContent.trim();
        const appointmentDate = document.getElementById('appointmentDate').textContent.trim();

        fetch('/cancel-appointment', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                centerEmail,
                appointmentDate
            })
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(data.message, true)
                    setTimeout(() => {
                        location.reload();
                    }, 2000);
                } else {
                    showNotification(data.message, false)
                }
            })
            .catch(error => {
                console.error('Error cancelling appointment:', error);
                showNotification(data.message, false);
            });
    });

    // Handle 'No, Keep Appointment' button click
    dismissCancelBtn.addEventListener('click', () => {
        cancelConfirmation.style.display = 'none';
        cancelAppointmentBtn.style.display = 'block';
    });
    </script>
</body>

</html>