<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Addiction Risk Scoring</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-pFh6lIRH6jQ3+1I1Hs3ey4V5E0vjH0GkAG9JMEgJ9HkWQvhj+YrE5zLX+tVUQSxZw36r/SI5K5AucA1Q++oWyg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Google Fonts - Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f9fc;
            padding-top: 50px;
        }

        .container {
            max-width: 900px;
            margin: auto;
        }

        h1 {
            text-align: center;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 40px;
        }

        .accordion-button {
            background-color: #007bff;
            color: white;
            font-weight: 600;
        }

        .accordion-body {
            background-color: #ffffff;
            padding: 20px;
            border-top: 1px solid #dee2e6;
        }

        .accordion-item {
            border: none;
            border-radius: 10px;
            margin-bottom: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        }

        .risk-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .risk-item h3 {
            font-size: 1.2rem;
            margin: 0;
            color: #2c3e50;
        }

        .risk-item .score-input {
            width: 60px;
            height: 40px;
            border-radius: 5px;
            border: 1px solid #007bff;
            text-align: center;
        }

        .btn-primary {
            width: 100%;
            background-color: #28a745;
            font-weight: 600;
        }

        .summary-card {
            background-color: #e9f7ef;
            border: none;
            border-radius: 10px;
            padding: 20px;
            margin-top: 30px;
        }

        .summary-card h3 {
            text-align: center;
            font-weight: 600;
        }

        .score-label {
            font-size: 1rem;
            font-weight: 600;
            color: #007bff;
        }

        .total-score {
            text-align: center;
            font-size: 2rem;
            color: #28a745;
            font-weight: 700;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Risk Factor Scoring</h1>

        <!-- Risk Items for Various Addictions -->
        <div class="risk-item">
            <h3>Drug Addiction</h3>
            <input type="number" class="score-input" placeholder="0" id="drugScore">
        </div>

        <div class="risk-item">
            <h3>Alcohol Addiction</h3>
            <input type="number" class="score-input" placeholder="0" id="alcoholScore">
        </div>

        <div class="risk-item">
            <h3>Internet Addiction</h3>
            <input type="number" class="score-input" placeholder="0" id="internetScore">
        </div>

        <div class="risk-item">
            <h3>Smoking Addiction</h3>
            <input type="number" class="score-input" placeholder="0" id="smokeScore">
        </div>

        <div class="risk-item">
            <h3>Gambling Addiction</h3>
            <input type="number" class="score-input" placeholder="0" id="gamblingScore">
        </div>

        <!-- Calculate Score Button -->
        <button class="btn btn-primary mt-4" onclick="calculateScore()">Calculate Total Score</button>

        <!-- Total Score Summary -->
        <div class="summary-card mt-5">
            <h3>Risk Score Summary</h3>
            <p class="text-center">Your total risk score for addiction-related behaviors:</p>
            <div class="total-score" id="totalScore">0</div>
        </div>
    </div>

    <!-- Script for calculating the total score -->
    <script>
        function calculateScore() {
            const drugScore = parseInt(document.getElementById("drugScore").value) || 0;
            const alcoholScore = parseInt(document.getElementById("alcoholScore").value) || 0;
            const internetScore = parseInt(document.getElementById("internetScore").value) || 0;
            const smokeScore = parseInt(document.getElementById("smokeScore").value) || 0;
            const gamblingScore = parseInt(document.getElementById("gamblingScore").value) || 0;

            const totalScore = drugScore + alcoholScore + internetScore + smokeScore + gamblingScore;

            // Redirect to the guidance page (EJS view) with the total score as a query parameter
            window.location.href = `/patient/guidance?score=${totalScore}`;
        }
    </script>
</body>

</html>