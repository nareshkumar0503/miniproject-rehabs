<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Center Registration</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/centerRegistration.css">
</head>
<body>
    <%- include('notifications') %>
    <div class="container">
        <h2 class="text-center mt-4 mb-4">Center Registration</h2>
        <form id="registrationForm" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="centerName">Center Name:</label>
                    <input type="text" class="form-control" id="centerName" name="centerName" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="contactNo">Contact Number:</label>
                    <input type="tel" class="form-control" id="contactNo" name="contactNo" 
                            title="Please enter a valid 10-digit phone number" required>
                    <div class="invalid-feedback">Please enter a valid 10-digit phone number.</div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="address">Address:</label>
                    <textarea class="form-control" id="address" name="address" rows="3" required></textarea>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                    <small id="passwordError" class="form-text">Password must be at least 8 characters long.</small>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="websiteURL">Website URL:</label>
                    <input type="url" class="form-control" id="websiteURL" name="websiteURL">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Services Offered:</label>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="service1" name="servicesOffered[]" value="Detoxification">
                        <label class="form-check-label" for="service1">Detoxification</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="service2" name="servicesOffered[]" value="Inpatient Rehabilitation">
                        <label class="form-check-label" for="service1">Inpatient Rehabilitation</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="service3" name="servicesOffered[]" value="Outpatient Rehabilitation">
                        <label class="form-check-label" for="service1">Outpatient Rehabilitation</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="service4" name="servicesOffered[]" value="Aftercare Programs">
                        <label class="form-check-label" for="service1">Aftercare Programs</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="service5" name="servicesOffered[]" value="Therapy and Counseling">
                        <label class="form-check-label" for="service2">Therapy and Counseling</label>
                    </div>
                    <!-- Add more services as needed -->
                </div>
                <div class="form-group col-md-6">
                    <label>Programs Available:</label>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="program1" name="programsAvailable[]" value="12-Step Program">
                        <label class="form-check-label" for="program1">12-Step Program</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="program2" name="programsAvailable[]" value="Holistic Programs">
                        <label class="form-check-label" for="program1">Holistic Programs</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="program3" name="programsAvailable[]" value="Dual Diagnosis">
                        <label class="form-check-label" for="program1">Dual Diagnosis</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="program4" name="programsAvailable[]" value="Gender-Specific Programs">
                        <label class="form-check-label" for="program1">Gender-Specific Programs</label>
                    </div>
                    <!-- Add more programs as needed -->
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Types of Addictions Treated:</label>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="addiction1" name="addictions[]" value="Alcohol">
                        <label class="form-check-label" for="addiction1">Alcohol</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="addiction2" name="addictions[]" value="Drugs">
                        <label class="form-check-label" for="addiction2">Drugs</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="addiction3" name="addictions[]" value="Smoking">
                        <label class="form-check-label" for="addiction2">Smoking</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="addiction4" name="addictions[]" value="Internet">
                        <label class="form-check-label" for="addiction2">Internet</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="addiction5" name="addictions[]" value="Gambling">
                        <label class="form-check-label" for="addiction2">Gambling</label>
                    </div>
                    <!-- Add more addictions as needed -->
                </div>
                <div class="form-group col-md-6">
                    <label for="emergencyServices">Emergency Services:</label>
                    <select class="form-control" id="emergencyServices" name="emergencyServices" required>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="startTime">Start Time:</label>
                    <input type="time" class="form-control" id="startTime" name="startTime" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="endTime">End Time:</label>
                    <input type="time" class="form-control" id="endTime" name="endTime" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="latitude">Latitude:</label>
                    <input type="text" class="form-control" id="latitude" name="latitude" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="longitude">Longitude:</label>
                    <input type="text" class="form-control" id="longitude" name="longitude" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="priceRange">Consultancy Fee (in INR):</label>
                    <select class="form-control" id="priceRange" name="priceRange" required>
                        <option value="">Select Price Range</option>
                        <option value="200">200</option>
                        <option value="500">500</option>
                        <option value="1000">1000</option>
                        <option value="Above 1000">Above 1000</option>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="centerImages">Center Images:</label>
                    <input type="file" class="form-control-file" id="centerImages" name="centerImages" accept="image/*" multiple required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="description">Center Description:</label>
                    <textarea class="form-control" id="description" name="description" rows="4" placeholder="Enter a brief description of the center" required></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block" id="registerButton">Register</button>
        </form> 
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
     <script src="/js/centerRegistration.js"></script>
</body>
</html>
